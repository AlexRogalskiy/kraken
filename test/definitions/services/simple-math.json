{
  "name": "simple-math",
  "client": {
    "module": "octopus.elixir-module-client",
    "start": {
      "code": [
        "defmodule SimpleMath do",
          "require Logger",

          "def add(%{\"a\" => a, \"b\" => b}) do",
            "%{\"sum\" => a + b}",
          "end",

          "def mult_by_two(%{\"x\" => x}) do",
            "%{\"result\" => x * 2}",
          "end",

          "def add_one(%{\"x\" => x}) do",
            "%{\"result\" => x + 1}",
          "end",

          "def log(event) do",
            "Logger.info(event)",
            "event",
          "end",
        "end"
      ]
    }
  },
  "interface": {
    "add": {
      "input": {
        "a": {"type": "number"},
        "b": {"type": "number"}
      },
      "call": {
        "module": "SimpleMath",
        "function": "add"
      },
      "output": {
        "sum": {"type": "number"}
      }
    },
    "mult_by_two": {
      "input": {
        "x": {"type": "number"}
      },
      "call": {
        "module": "SimpleMath",
        "function": "mult_by_two"
      },
      "output": {
        "result": {"type": "number"}
      }
    },
    "add_one": {
      "input": {
        "x": {"type": "number"}
      },
      "call": {
        "module": "SimpleMath",
        "function": "add_one"
      },
      "output": {
        "result": {"type": "number"}
      }
    },
    "log": {
      "call": {
        "module": "SimpleMath",
        "function": "log"
      }
    }
  }
}
